{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "External Reference",
  "type" : "object",
  "additionalProperties" : false,
  "properties" : {
    "id" : {
      "type" : "string"
    },
    "folioReference" : {
      "type" : "string"
    },
    "externalReference" : {
      "type" : "string"
    },
    "distinctives" : {
      "type" : "array",
      "items" : {
        "$ref" : "#/definitions/ExternalReferenceValue"
      }
    },
    "type" : {
      "$ref" : "#/definitions/ExternalReferenceType"
    }
  },
  "required" : [ "folioReference", "externalReference", "type" ],
  "definitions" : {
    "ExternalReferenceValue" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "key" : {
          "type" : "string"
        },
        "value" : {
          "type" : "string"
        }
      },
      "required" : [ "key", "value" ]
    },
    "ExternalReferenceType" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string"
        },
        "name" : {
          "type" : "string"
        },
        "allowedKeys" : {
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        }
      },
      "required" : [ "name" ]
    }
  }
}